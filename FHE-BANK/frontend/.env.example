# ---------- Next.js (client-side) ----------
# NOTE: Only variables prefixed with NEXT_PUBLIC_ are available in the browser.

# Host chain (Sepolia) contracts you deployed
# Prefer the explicit keys below; NEXT_PUBLIC_CONTRACT_ADDRESS is kept for legacy compatibility.
NEXT_PUBLIC_BALANCE_CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000
NEXT_PUBLIC_CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000
NEXT_PUBLIC_COLLATERAL_CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000
NEXT_PUBLIC_PRIVATE_ZAMA_TOKEN_ADDRESS=0x0000000000000000000000000000000000000000
NEXT_PUBLIC_ZAMA_TOKEN_ADDRESS=0x0000000000000000000000000000000000000000
NEXT_PUBLIC_ZAMA_VAULT_ADDRESS=0x0000000000000000000000000000000000000000

# Host chain id for Sepolia
NEXT_PUBLIC_CHAIN_ID=11155111

# Optional: override the RPC used by the relayer SDK to talk to Sepolia.
# If omitted, the SDK's built-in SepoliaConfig.network is used.
NEXT_PUBLIC_SEPOLIA_RPC_URL=https://ethereum-sepolia-rpc.publicnode.com

# Optional: override the relayer URL.
# If omitted, the SDK's built-in SepoliaConfig.relayerUrl is used.
NEXT_PUBLIC_RELAYER_URL=https://relayer.testnet.zama.org


# ---------- Hardhat (deployment) ----------
# Private Key for deployment (NEVER commit your real private key!)
PRIVATE_KEY=your_private_key_here

# Sepolia RPC URL for Hardhat deployments
SEPOLIA_RPC_URL=https://ethereum-sepolia-rpc.publicnode.com
